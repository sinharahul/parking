<p id="notice"><%= notice %></p>

<h1>Listing Car Registrations</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>License</th>
      <th>Month</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <%  @car_registrations=[] if @car_registrations.nil?  %>
  
    <% @car_registrations.each do |car_registration| %>
      <tr>
        <td><%= car_registration.owner %></td>
        <td><%= car_registration.license %></td>
        <td><%= car_registration.month %></td>
        <td><%= link_to 'Show', car_registration %></td>
        <td><%= link_to 'Edit', edit_car_registration_path(car_registration) %></td>
        <td><%= link_to 'Destroy', car_registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

